generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  UserID      String?  @unique @default(uuid())
  Name        String?
  Email       String
  Password    String   
  expenses    Expenses[] 
  incomes     Incomes[]  
  savings     Savings[] 
}

model Expenses {
  id          Int      @id @default(autoincrement())
  user        User?    @relation(fields: [UserId], references: [UserID])
  UserId      String? 
  Category    String   
  Expense     String
  Import      Int
  Month       String
  Year        Int
  User        String
}

model Incomes {
  id          Int      @id @default(autoincrement())
  user        User?    @relation(fields: [UserId], references: [UserID])
  UserId      String? 
  Category    String   
  Income      String
  Import      Int
  Month       String
  Year        Int
  User        String
}

model Savings {
  id          Int      @id @default(autoincrement())
  userid      User?    @relation(fields: [UserId], references: [UserID])
  UserId      String?
  Category    String   
  Saving      String
  Import      Int
  Month       String
  Year        Int
  User        String
}